<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nothing.scroller">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <receiver android:name=".TestWidgetProvider">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/apwidget_provider_info" />
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.nothing.scroller.action.CLICK" />
            </intent-filter>
        </receiver>

        <receiver android:name=".MyAppWidgetProvider">

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/apwidget_provider_info"/>


            <intent-filter>
                <action android:name="com.nothing.scroller.action_CLICK"/>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>